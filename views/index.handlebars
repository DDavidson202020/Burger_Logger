<h1>Eat-Da-Burger!</h1>
<div class="eaten">
<h2><i class="fas fa-hamburger"></i> Burgers that are about to be eaten!</h2>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ol>
</div>
<div class="not-eaten">
<h2><i class="fas fa-hamburger"></i> Burgers have been eaten!</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ol>
</div>
<div class="center">
<h2><i class="fas fa-hamburger"></i> Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>